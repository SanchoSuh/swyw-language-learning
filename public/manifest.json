{
  "manifest_version": 3,
  "name": "SWYW - Language Learning Helper",
  "version": "1.0.0",
  "description": "Quickly save words and phrases for language learning",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save to SWYW"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}